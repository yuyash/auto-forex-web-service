# Database Configuration
DB_NAME=forex_trading
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Django Configuration
SECRET_KEY=your-secret-key-here-min-50-chars
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
ENCRYPTION_KEY=your-encryption-key-here-32-chars-min

# OANDA API Configuration
OANDA_PRACTICE_API=https://api-fxpractice.oanda.com
OANDA_LIVE_API=https://api-fxtrade.oanda.com

# Email Configuration
# EMAIL_BACKEND_TYPE options: smtp (default) or ses (AWS Simple Email Service)
EMAIL_BACKEND_TYPE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@example.com
# For AWS SES (when EMAIL_BACKEND_TYPE=ses)
AWS_SES_REGION=us-east-1

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# AWS Configuration (optional - for backtesting and SES)
# Use IAM role authentication (recommended for production/EC2)
# Or specify a profile name for local development
# AWS_PROFILE=default
# AWS_ROLE_ARN=arn:aws:iam::123456789012:role/YourRoleName
# AWS_CREDENTIALS_FILE=~/.aws/credentials  # Optional: custom credentials location
AWS_REGION=us-east-1
AWS_S3_BUCKET=
# Note: Never use AWS_ACCESS_KEY_ID or AWS_SECRET_ACCESS_KEY
# For local development, configure AWS CLI: aws configure --profile <profile-name>
