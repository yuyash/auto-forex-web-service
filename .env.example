# Auto Forex Trading System - Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DB_NAME=forex_trading
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# ============================================
# Redis Configuration
# ============================================
REDIS_PASSWORD=your_secure_redis_password_here

# ============================================
# Django Configuration
# ============================================
SECRET_KEY=your_django_secret_key_here_min_50_chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# ============================================
# OANDA API Configuration
# ============================================
OANDA_PRACTICE_API=https://api-fxpractice.oanda.com
OANDA_LIVE_API=https://api-fxtrade.oanda.com

# ============================================
# AWS Configuration (for backtesting)
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your-historical-data-bucket
AWS_REGION=us-east-1

# ============================================
# Security Configuration
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_for_api_tokens

# ============================================
# Docker Configuration
# ============================================
DOCKERHUB_USER=your_dockerhub_username
VERSION=latest

# ============================================
# SSL/Domain Configuration
# ============================================
DOMAIN=yourdomain.com
EMAIL=your-email@example.com

# ============================================
# Application Configuration
# ============================================
# Timezone for server (default: UTC)
TZ=UTC

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
