# Auto Forex Trading System - Environment Variables
# Copy this file to .env and fill in your values
# See docs/ENVIRONMENT_VARIABLES.md for complete reference

# ============================================
# Database Configuration (Required)
# ============================================
DB_NAME=forex_trading
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here

# ============================================
# Django Configuration (Required)
# ============================================
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your_django_secret_key_here_min_50_chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# ============================================
# Security Configuration (Required)
# ============================================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_encryption_key_for_api_tokens

# ============================================
# Redis Configuration (Optional)
# ============================================
# Leave empty for no authentication (development)
# Set a strong password for production
REDIS_PASSWORD=

# ============================================
# OANDA API Configuration (Optional)
# ============================================
OANDA_PRACTICE_API=https://api-fxpractice.oanda.com
OANDA_LIVE_API=https://api-fxtrade.oanda.com

# ============================================
# AWS Configuration (Optional - for backtesting)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=
AWS_REGION=us-east-1

# ============================================
# Docker Configuration (Production Only)
# ============================================
DOCKERHUB_USERNAME=your_dockerhub_username
DOCKERHUB_TOKEN=your_dockerhub_token
VERSION=latest

# ============================================
# SSL/Domain Configuration (Production Only)
# ============================================
DOMAIN=yourdomain.com
EMAIL=your-email@example.com
