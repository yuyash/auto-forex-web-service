{
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[dockercompose]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "docker.docker",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "chat.agent.maxRequests": 1024,
  "chat.agent.enabled": true,
  "chat.checkpoints.enabled": true,
  "chat.commandCenter.enabled": true,
  "chat.edits2.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "basename": true,
    "cat": true,
    "cd": true,
    "chmod": true,
    "chown": true,
    "curl": true,
    "cut": true,
    "date": true,
    "dd": true,
    "del": true,
    "dirname": true,
    "df": true,
    "du": true,
    "echo": true,
    "eval": true,
    "file": true,
    "git": true,
    "grep": true,
    "head": true,
    "jq": true,
    "kill": true,
    "mkdir": true,
    "mv": true,
    "npm": true,
    "npx": true,
    "ls": true,
    "ps": true,
    "pwd": true,
    "pytest": true,
    "python": true,
    "rm": true,
    "tail": true,
    "tr": true,
    "wc": true,
    "which": true,
    "stat": true,
    "sleep": true,
    "sort": true,
    "source": true,
    "tree": true,
    "top": true,
    "uv": true,
    "wget": true,
    "xargs": true
  },
  "editor.rulers": [
    100,
    120
  ],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "on",
  "explorer.excludeGitIgnore": true,
  "kiroAgent.enableTabAutocomplete": true,
  "kiroAgent.modelSelection": "claude-opus-4.6-1m",
  "kiroAgent.trustedCommands": [
    "cat *",
    "cd *",
    "chmod *",
    "chown *",
    "cp *",
    "curl *",
    "docker *",
    "docker-compose *",
    "echo *",
    "find *",
    "git *",
    "git-lfs *",
    "grep *",
    "head *",
    "mkdir *",
    "mv *",
    "npm *",
    "npx *",
    "ls *",
    "pre-commit *",
    "pytest *",
    "python *",
    "python3 *",
    "rm *",
    "ruff *",
    "sed *",
    "sleep *",
    "source *",
    "ssh *",
    "tail *",
    "touch *",
    "ty *",
    "uname *",
    "uv *",
    "wc *",
    "which *"
  ],
  "ruff.configuration": "${workspaceFolder}/backend/pyproject.toml",
  "ruff.interpreter": [
    "${workspaceFolder}/backend/.venv/bin/python"
  ],
  "python.createEnvironment.contentButton": "show",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestPath": "${workspaceFolder}/backend/.venv/bin/pytest",
  "python.testing.pytestArgs": [
    "tests"
  ],
  "python.testing.cwd": "${workspaceFolder}/backend",
  "python.terminal.activateEnvironment": false,
  "python.terminal.activateEnvInCurrentTerminal": false,
  "typescript.autoClosingTags": false,
  "playwright.reuseBrowser": false,
  "playwright.pickLocatorCopyToClipboard": true,
  "playwright.runGlobalSetupOnEachRun": true,
  "playwright.showTrace": true,
  "debug.terminal.clearBeforeReusing": true,
  "terminal.integrated.hideOnStartup": "never"
}
