{
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[python]": {
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[dockercompose]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.defaultFormatter": "docker.docker",
    "editor.detectIndentation": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "chat.agent.maxRequests": 1024,
  "chat.agent.enabled": true,
  "chat.checkpoints.enabled": true,
  "chat.commandCenter.enabled": true,
  "chat.edits2.enabled": true,
  "chat.tools.terminal.autoApprove": {
    "basename": true,
    "cat": true,
    "cd": true,
    "chmod": true,
    "chown": true,
    "curl": true,
    "cut": true,
    "date": true,
    "dd": true,
    "del": true,
    "dirname": true,
    "df": true,
    "du": true,
    "echo": true,
    "eval": true,
    "file": true,
    "git": true,
    "grep": true,
    "head": true,
    "jq": true,
    "kill": true,
    "mkdir": true,
    "mv": true,
    "npm": true,
    "npx": true,
    "ls": true,
    "ps": true,
    "pwd": true,
    "pytest": true,
    "python": true,
    "rm": true,
    "tail": true,
    "tr": true,
    "wc": true,
    "which": true,
    "stat": true,
    "sleep": true,
    "sort": true,
    "source": true,
    "tree": true,
    "top": true,
    "uv": true,
    "wget": true,
    "xargs": true
  },
  "editor.rulers": [100, 120],
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.wordWrap": "on",
  "explorer.excludeGitIgnore": true,
  "flake8.enabled": true,
  "flake8.args": ["--toml-config"],
  "kiroAgent.enableTabAutocomplete": true,
  "kiroAgent.modelSelection": "claude-opus-4.5",
  "kiroAgent.trustedCommands": [
    "cat *",
    "cd *",
    "chmod *",
    "chown *",
    "cp *",
    "curl *",
    "docker *",
    "docker-compose *",
    "echo *",
    "find *",
    "flake8 *",
    "git *",
    "git-lfs *",
    "grep *",
    "head *",
    "mkdir *",
    "mypy *",
    "mv *",
    "npm *",
    "npx *",
    "ls *",
    "pre-commit *",
    "pytest *",
    "pylint *",
    "python *",
    "python3 *",
    "rm *",
    "sed *",
    "sleep *",
    "source *",
    "ssh *",
    "tail *",
    "touch *",
    "uname *",
    "uv *",
    "wc *",
    "which *"
  ],
  "mypy-type-checker.cwd": "${workspaceFolder}/backend",
  "mypy-type-checker.interpreter": [
    "${workspaceFolder}/backend/.venv/bin/python"
  ],
  "mypy-type-checker.path": ["${workspaceFolder}/backend/.venv/bin/mypy"],
  "pylint.enabled": true,
  "pylint.cwd": "${workspaceFolder}/backend",
  "pylint.interpreter": ["${workspaceFolder}/backend/.venv/bin/python"],
  "pylint.path": ["${workspaceFolder}/backend/.venv/bin/pylint"],
  "python.createEnvironment.contentButton": "show",
  "python.defaultInterpreterPath": "${workspaceFolder}/backend/.venv/bin/python",
  "python-envs.defaultEnvManager": "ms-python.python:venv",
  "python-envs.pythonProjects": [],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  "python.terminal.useEnvFile": true,
  "python.useEnvironmentsExtension": true,
  "python-env.workspaceSearchPaths": ["${workspaceFolder}/backend/"],
  "typescript.autoClosingTags": false,
  "workbench.colorTheme": "Visual Studio Light"
}
