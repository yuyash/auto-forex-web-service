{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django: runserver",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/backend/manage.py",
      "args": ["runserver", "0.0.0.0:8000"],
      "django": true,
      "justMyCode": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    },
    {
      "name": "Celery: worker",
      "type": "debugpy",
      "request": "launch",
      "module": "celery",
      "args": [
        "-A",
        "config",
        "worker",
        "-l",
        "info",
        "--concurrency=4",
        "--max-tasks-per-child=10"
      ],
      "justMyCode": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "DJANGO_SETTINGS_MODULE": "config.settings"
      }
    },
    {
      "name": "Frontend: npm run dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/frontend"
    }
  ],
  "compounds": [
    {
      "name": "Run Full Stack Application",
      "configurations": [
        "Django: runserver",
        "Celery: worker",
        "Frontend: npm run dev"
      ]
    }
  ]
}
